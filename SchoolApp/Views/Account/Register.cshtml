@using SchoolApp.Models
@model SchoolApp.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Mankeytech School App</title>
    <meta name="description" content="The School Management System" />
    <meta name="author" content="MankeyTech (Pty) Ltd">

    @Html.Partial("_LayoutCssPartial")


</head>
<body>
    <div>
        <!-- ############ LAYOUT START-->
        <div class="center-block w-xxl w-auto-xs p-y-md">
            <div class="navbar">
                <div class="pull-center">
                    @Html.Partial("_LayoutHeaderPartial")
                </div>
            </div>
            <div class="p-a-md box-color r box-shadow-z1 text-color m-a">
                <div class="m-b text-sm">
                    <b>Sign up to your Flatkit Account</b>
                </div>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="md-form-group float-label">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "md-input" })
                        <label>Username</label>
                    </div>
                    <div class="md-form-group float-label">
                        @Html.TextBoxFor(m => m.Email, new { @class = "md-input" })
                        <label>Email</label>
                    </div>
                    <div class="md-form-group float-label">
                        @Html.PasswordFor(m => m.Password, new { @class = "md-input" })
                        <label>Password</label>
                    </div>
                    <div class="md-form-group float-label">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "md-input" })
                        <label>Confirm Password</label>
                    </div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <input type="submit" class="btn primary btn-block p-x-md" value="Sign up" />

                }
            </div>
            <div class="p-v-lg text-center">
                <div>Already have an account? <a href="@Url.Action("Login","Account")" class="text-primary _600">Sign in</a></div>
            </div>
        </div>
        <!-- ############ LAYOUT END-->
    </div>
    <!-- build:js ../Scripts/app.html.js -->
    @Html.Partial("_LayoutJSPartial")
    <!-- endbuild -->
</body>
</html>
