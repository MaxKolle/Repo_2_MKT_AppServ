
@using SchoolApp.Models
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Mankeytech School App</title>
    <meta name="description" content="The School Management System" />
    <meta name="author" content="MankeyTech (Pty) Ltd">

    @Html.Partial("_LayoutCssPartial")

</head>
<body>
    <div>
        <!-- ############ LAYOUT START-->
        <div class="center-block w-xxl w-auto-xs p-y-md">
            <div class="navbar">
                <div class="pull-center">
                    @Html.Partial("_LayoutHeaderPartial")
                </div>
            </div>
            <div class="p-a-md box-color r box-shadow-z1 text-color m-a">
                <div class="m-b text-sm">
                    <b>Sign in with your Flatkit Account</b>
                </div>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                @Html.AntiForgeryToken()

                <div class="md-form-group float-label">
                    @Html.TextBoxFor(m => m.Email, new { @class = "md-input" })
                    <label>Email</label>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="md-form-group float-label">
                    @Html.PasswordFor(m => m.Password, new { @class = "md-input" })
                    <label>Password</label>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="m-b-md">
                    <label class="md-check">
                        @Html.CheckBoxFor(m => m.RememberMe)<i class="primary"></i> Keep me signed in
                    </label>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="submit" value="Log in" class="btn primary btn-block p-x-md" />
                }
            </div>
            <div class="p-v-lg text-center">
                <div class="m-b">
                    <a href="@Url.Action("ForgotPassword","Account")" class="text-primary _600">Forgot password?</a>
                </div>
                @*<div>
                    Do not have an account?
                    <a href="@Url.Action("Register","Account")" class="text-primary _600">Sign up</a>
                </div>*@
            </div>
        </div>
        <!-- ############ LAYOUT END-->
    </div>
    <!-- build:js ../Scripts/app.html.js -->
    @Html.Partial("_LayoutJSPartial")
    <!-- endbuild -->
</body>
</html>
